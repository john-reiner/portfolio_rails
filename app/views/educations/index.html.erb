<div class="container">
  <div class="row">
    <div class="heading">
      <h1>Educations</h1>
      <%= button_to "Add", new_education_path, method: :get, class: "btn btn-outline-primary" %>
    </div>
    <div class="col">

      <table class="table align-middle table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">End Date</th>
            <th scope="col">Description</th>
            <th scope="col">Technologies</th>
            <th scope="col">Skills</th>
            <th scope="col">Address</th>
          </tr>
        </thead>

        <tbody>
          <% @educations.each do |education| %>
            <tr>
              <td><%= link_to  education.title, education_path(education.id) %></td>
              <td><%= education.end_date %></td>
              <td><%= education.description %></td>
              <td><ol>
                    <% education.technologies.each do |technology| %>
                      <li><%= technology.name %></li>
                  <% end %>
                </ol>
              </td>
              <td><ol>
                    <% education.skills.each do |skill| %>
                      <li><%= skill.name %></li>
                  <% end %>
                </ol>
              </td>
              <td><%= link_to  "Address", education.address %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  </div>
</div>
