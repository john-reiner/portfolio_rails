<div class="container">
  <div class="row">
    <div class="heading">
      <h1>Projects</h1>
      <p id="notice"><%= notice %></p>
      <%= button_to "Add", new_project_path, method: :get, class: "btn btn-outline-primary" %>
    </div>
    <div class="col">

      <table class="table align-middle table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Deployed?</th>
            <th scope="col">Github</th>
            <th scope="col">Summary</th>
            
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to  project.name, project_path(project.id) %></td>
              <td><%= image_tag(project.image, class: "project-image", alt: "project image")%></td>
              <% if project.deployed %>
                <td><%= link_to  project.deployed, project.address, target: :_blank %></td>
              <% else %>
                <td><%= project.deployed %></td>
              <% end %>
              <td><%= link_to  "Github", project.github, target: :_blank %></td>
              <td><%= project.summary %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  </div>
</div>
