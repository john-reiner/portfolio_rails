<div class="container">

  <p id="notice"><%= notice %></p>


  <h1>My Dashboard</h1>
  <hr>

  <div class="row" id="my-info">
    <div class="col-6" >
      <h2><%= @user.first_name + " " + @user.last_name %> </h2>
        <%= image_tag(@user.image, class: "img-thumbnail", id: "user-image", alt: "user image")%>
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <p>
        <strong>Bio:</strong>
        <%= @user.bio %>
      </p>
      <p>
        <strong>Location:</strong>
        <%= @user.location %>
      </p>
      <%= button_to "Edit", edit_user_path(@user), method: :get, class: "btn btn-outline-primary" %>
    </div>  


    <div class="col-3" id="links">
      <div id="links-heading">
        <h2><%= link_to  "Links", links_path %></h2>
        <%= button_to "Add", new_link_path, method: :get, class: "btn btn-outline-primary" %>
      </div>
      <table class="table align-middle table-hover table-sm">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Edit/Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @user.links.each do |link| %>
            <tr>
              <td><%= link_to  link.name, link.address, target: :_blank %></td>
              <td><%= image_tag(link.image, class: "link-image", alt: "link image")%></td>
              <td><%= link_to 'Edit', edit_link_path(link) %> | <%= link_to 'Remove', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class="col-3" id="technologies">
      <div id="technologies-heading">
        <h2> <%= link_to  "Technologies", technologies_path %></h2>
        <%= button_to "Add", new_technology_path, method: :get, class: "btn btn-outline-primary" %>
      </div>
      <table class="table align-middle table-hover table-sm">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Edit/Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @user.technologies.each do |technology| %>
            <tr>
              <td><%= link_to  technology.name, technology_path%></td>
              <td><%= image_tag(technology.image, class: "link-image", alt: "link image")%></td>
              <td><%= link_to 'Edit', edit_technology_path(technology) %> | <%= link_to 'Remove', technology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <br>
  <h2>Portfolio Info</h2>
  <hr>
  <div class="row" id="info">
    <div class="col" id="projects">
    <h2> <%= link_to  "Projects", projects_path %></h2>
      <%= button_to "Add", new_project_path, method: :get, class: "btn btn-outline-primary" %>
      <ul>
        <% @user.projects.each do |project|%>
          <li><%= link_to  project.name, project_path(project) %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      <h2> <%= link_to  "Blogs", blogs_path %></h2>
      <%= button_to "Add", new_blog_path, method: :get, class: "btn btn-outline-primary" %>
      <ul>
        <% @user.blogs.each do |blog| %>
          <li><%= link_to  blog.title, blog_path(blog) %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      <h2> <%= link_to  "Experiences", experiences_path %></h2>
      <%= button_to "Add", new_experience_path, method: :get, class: "btn btn-outline-primary" %>
      <ul>
        <% @user.experiences.each do |experience| %>
          <li><%= link_to  experience.title, experience_path(experience) %></li>
        <% end %>
      </ul>
    </div>

    <div class='col'>
      <h2> <%= link_to  "Edcuations", educations_path %></h2>
      <%= button_to "Add", new_education_path, method: :get, class: "btn btn-outline-primary" %>
      <ul>
        <% @user.educations.each do |education| %>
          <li><%= link_to  education.title, education_path(education) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <br>
  <br>
</div>

